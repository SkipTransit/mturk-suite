{
  "manifest_version": 2,

  "name": "Mturk Suite",
  "version": "0.1.4",

  "icons": {
    "16": "icon_16.png",
    "128": "icon_128.png"
  },
  
  "browser_action": {
    "default_icon": "icon_128.png",
    "default_title": "Mturk Suite"
  },

  "background": {
    "scripts": [
      "jquery-3.1.1.min.js",
      "background.js"
    ],
    "persistent": true
  },

  "content_scripts": [

    // all.js
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "css.css"
      ],
      "js": [
        "jquery-3.1.1.min.js", 
        "all.js"
      ],
      "run_at": "document_start"
    },
    
    // global.js
    {
      "matches": [
        "https://www.mturk.com/*"
      ],
      "js": [
        "jquery-3.1.1.min.js", 
        "global.js"
      ],
      "run_at": "document_start"
    },
    
    // sendhit.js
    {
      "matches": [
        "https://www.mturk.com/*"
      ],
      "js": [
        "jquery-3.1.1.min.js", 
        "sendhit.js"
      ],
      "run_at": "document_start"
    },
    
    // dashboard.js
    {
      "matches": [
        "https://www.mturk.com/mturk/dashboard"
      ],
      "js": [
        "jquery-3.1.1.min.js", 
        "dashboard.js"
      ],
      "run_at": "document_start"
    },
    
    // hitexport.js
    {
      "matches" : [
        "https://www.mturk.com/*"
      ],
      "js" : [
        "jquery-3.1.1.min.js",
        "hitexport.js"
      ],
      "run_at" : "document_start"
    },
    
    // turkopticon.js
    {
      "matches" : [
        "https://www.mturk.com/*"
      ],
      "js" : [
        "jquery-3.1.1.min.js",
        "turkopticon.js"
      ],
      "run_at" : "document_start"
    }
  ],
  
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "webRequest",
    "contextMenus",
    "clipboardWrite",
    "<all_urls>"
  ],
  
  "externally_connectable": {
    "matches": [
      "https://www.mturk.com/*"
    ]
  }
}
