{
  "manifest_version": 2,

  "name"        : "Mturk Suite",
  "version"     : "0.1.0",

  "icons" : {
    "16" : "icon_16.png",
    "128" : "icon_128.png"
  },
  
  "browser_action": {
    "default_icon" : "icon_128.png",
    "default_title" : "Mturk Suite"
  },

  "background" : {
    "scripts" : [
      "jquery-3.1.1.min.js",
      "background.js"
    ],
    "persistent" : true
  },

  "content_scripts" : [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "jquery-3.1.1.min.js", 
        "all.js"
      ],
      "run_at" : "document_start"
    },
    {
      "matches": [
        "https://www.mturk.com/*"
      ],
      "js": [
        "jquery-3.1.1.min.js", 
        "global.js"
      ],
      "run_at" : "document_start"
    },
    {
      "matches": [
        "https://www.mturk.com/mturk/dashboard"
      ],
      "js": [
        "jquery-3.1.1.min.js", 
        "dashboard.js"
      ],
      "run_at" : "document_start"
    }
  ],
  
  "permissions" : [
    "storage",
    "contextMenus",
    "<all_urls>"
  ]
}
