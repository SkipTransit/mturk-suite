{
  "manifest_version": 2,

  "name": "Mturk Suite",
  "version": "0.1.8.0",

  "icons": {
    "16": "icon_16.png",
    "128": "icon_128.png"
  },
  
  "browser_action": {
    "default_icon": "icon_128.png",
    "default_title": "Mturk Suite",
    "default_popup" : "default.html"
  },

  "background": {
    "scripts": [
      "jquery-3.1.1.min.js",
      "background.js"
    ],
    "persistent": true
  },

  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "jquery-3.1.1.min.js", 
        "all.js"
      ],
      "run_at": "document_start"
    },
    
    {
      "matches": [
        "https://www.mturk.com/*"
      ],
      "css": [
        "css.css"
      ],
      "js": [
        "jquery-3.1.1.min.js",
        "dark.js",
        "global.js",
        "sendhit.js",
        "hitexport.js",
        "accept_next.js",
        "accept_links.js",
        "hitcapsule.js",
        "turkopticon.js"
      ],
      "run_at": "document_start"
    },
    
    {
      "matches": [
        "https://www.mturk.com/mturk/dashboard"
      ],
      "js": [
        "jquery-3.1.1.min.js", 
        "dashboard.js"
      ],
      "run_at": "document_start"
    }
  ],
  
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "webRequest",
    "contextMenus",
    "clipboardWrite",
    "<all_urls>"
  ],
  
  "web_accessible_resources" : [
    "media/*"
  ],
  
  "externally_connectable": {
    "matches": [
      "https://www.mturk.com/*"
    ]
  }
}
